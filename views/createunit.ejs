<%- include('head.ejs') %>
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Unit Management</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">Units</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 offset-md-4"><%- include('msg.ejs') %></div>
    </div>
    <div class="row">
      <!-- Create Form -->
      <div class="col-md-5">
        <div class="card card-primary shadow-lg">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-plus"></i> Create Unit</h3>
          </div>
          <form action="/createunit" method="post">
            <div class="card-body">
              <div class="form-group">
                <label>Unit Label</label>
                <input
                  type="text"
                  name="unit_label"
                  class="form-control"
                  placeholder="e.g., bottle, pack"
                  required
                />
              </div>
            </div>
            <div class="card-footer text-right">
              <button type="submit" class="btn button-29 text-white">
                <i class="fas fa-save"></i> Submit
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Unit List -->
      <div class="col-md-7">
        <div class="card shadow-lg">
          <div class="card-header bg-success text-white">
            <h3 class="card-title">
              <i class="fas fa-list"></i> Available Units
            </h3>
          </div>
          <div class="card-body p-0">
            <table class="table table-bordered table-hover table-striped mb-0">
              <thead class="thead-dark">
                <tr>
                  <th style="width: 10%">#</th>
                  <th style="width: 50%">Unit Label</th>
                  <th style="width: 30%">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (units && units.length > 0) { %> <%
                units.forEach(function(u, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= u.unit_label %></td>
                  <td class="text-center">
                    <!-- Edit -->
                    <button
                      type="button"
                      class="btn btn-sm btn-warning editBtn"
                      data-toggle="modal"
                      data-target="#editUnitModal"
                      data-id="<%= u.unit_id %>"
                      data-label="<%= u.unit_label %>"
                    >
                      <i class="fa fa-edit"></i> Edit
                    </button>

                    <!-- Delete -->
                    <button
                      type="button"
                      class="btn btn-sm btn-danger deleteBtn"
                      data-id="<%= u.unit_id %>"
                      data-label="<%= u.unit_label %>"
                      data-toggle="modal"
                      data-target="#deleteUnitModal"
                    >
                      <i class="fa fa-trash"></i> Delete
                    </button>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="3" class="text-center text-muted">
                    No units found. Please add one.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Edit Modal -->
<div class="modal fade" id="editUnitModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <form id="editUnitForm" method="post">
      <div class="modal-content">
        <div class="modal-header bg-warning">
          <h5 class="modal-title">Edit Unit</h5>
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="edit_unit_label">Unit Label</label>
            <input
              type="text"
              name="unit_label"
              id="edit_unit_label"
              class="form-control"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Delete Confirm Modal -->
<div class="modal fade" id="deleteUnitModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <form id="deleteUnitForm" method="post">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Confirm Delete</h5>
          <button type="button" class="close text-white" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>
            To confirm deletion, type the name of the unit:
            <strong id="delete_unit_name"></strong>
          </p>
          <div class="form-group">
            <input
              type="text"
              id="delete_confirm_input"
              name="confirm_name"
              class="form-control"
              placeholder="Type exact unit name"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            id="deleteConfirmBtn"
            class="btn btn-danger"
            disabled
          >
            Confirm
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Edit Modal
    document.querySelectorAll(".editBtn").forEach((btn) => {
      btn.addEventListener("click", function () {
        const id = this.dataset.id;
        const label = this.dataset.label;
        document.getElementById("edit_unit_label").value = label;
        document.getElementById("editUnitForm").action = "/editunit/" + id;
      });
    });

    // Delete Modal with input confirm
    const deleteButtons = document.querySelectorAll(".deleteBtn");
    const deleteForm = document.getElementById("deleteUnitForm");
    const deleteUnitName = document.getElementById("delete_unit_name");
    const deleteInput = document.getElementById("delete_confirm_input");
    const deleteConfirmBtn = document.getElementById("deleteConfirmBtn");

    deleteButtons.forEach((btn) => {
      btn.addEventListener("click", function () {
        const id = this.dataset.id;
        const label = this.dataset.label;

        deleteUnitName.textContent = label;
        deleteForm.action = "/deleteunit/" + id;

        // reset input + disable button
        deleteInput.value = "";
        deleteConfirmBtn.disabled = true;

        deleteInput.onkeyup = function () {
          deleteConfirmBtn.disabled = deleteInput.value.trim() !== label;
        };
      });
    });
  });
</script>

