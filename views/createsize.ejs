<%- include('head.ejs') %>

<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-12 col-md-6">
        <h1>Size Management</h1>
      </div>
      <div class="col-12 col-md-6">
        <ol class="breadcrumb float-md-right float-sm-left">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">Sizes</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <!-- Flash Messages -->
    <div class="row mb-3">
      <div class="col-12 col-md-6 offset-md-3"><%- include('msg.ejs') %></div>
    </div>

    <div class="row">
      <!-- Create Form -->
      <div class="col-12 col-md-5 mb-3">
        <div class="card card-primary shadow-sm">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-plus"></i> Create Size</h3>
          </div>
          <form action="/createsize" method="post">
            <div class="card-body">
              <div class="form-group">
                <label>Size Label</label>
                <input
                  type="text"
                  name="size_label"
                  class="form-control"
                  placeholder="e.g., 500cc, 1L"
                  required
                />
              </div>
            </div>
            <div class="card-footer text-right">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Submit
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Size List -->
      <div class="col-12 col-md-7 mb-3">
        <div class="card shadow-sm">
          <div class="card-header bg-success text-white">
            <h3 class="card-title">
              <i class="fas fa-list"></i> Available Sizes
            </h3>
          </div>
          <div class="card-body p-0 table-responsive">
            <table class="table table-bordered table-hover table-striped mb-0">
              <thead class="thead-dark">
                <tr>
                  <th style="width: 10%">#</th>
                  <th style="width: 50%">Size Label</th>
                  <th style="width: 30%">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (sizes && sizes.length > 0) { %> <%
                sizes.forEach(function(s, idx) { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= s.size_label %></td>
                  <td class="d-flex flex-wrap gap-1">
                    <button
                      type="button"
                      class="btn btn-sm btn-warning editBtn"
                      data-toggle="modal"
                      data-target="#editSizeModal"
                      data-id="<%= s.size_id %>"
                      data-label="<%= s.size_label %>"
                    >
                      <i class="fa fa-edit"></i> Edit
                    </button>
                    <button
                      type="button"
                      class="btn btn-sm btn-danger deleteBtn"
                      data-id="<%= s.size_id %>"
                      data-label="<%= s.size_label %>"
                      data-toggle="modal"
                      data-target="#deleteSizeModal"
                    >
                      <i class="fa fa-trash"></i> Delete
                    </button>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="3" class="text-center text-muted">
                    No sizes found. Please add one.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Edit Modal -->
<div class="modal fade" id="editSizeModal" tabindex="-1" role="dialog">
  <div
    class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
    role="document"
  >
    <form id="editSizeForm" method="post">
      <div class="modal-content">
        <div class="modal-header bg-warning">
          <h5 class="modal-title">Edit Size</h5>
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="edit_size_label">Size Label</label>
            <input
              type="text"
              name="size_label"
              id="edit_size_label"
              class="form-control"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteSizeModal" tabindex="-1" role="dialog">
  <div
    class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
    role="document"
  >
    <form id="deleteSizeForm" method="post">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Confirm Delete</h5>
          <button type="button" class="close text-white" data-dismiss="modal">
            &times;
          </button>
        </div>
        <div class="modal-body">
          <p>
            To confirm deletion, type the size name:
            <strong id="delete_size_name"></strong>
          </p>
          <input
            type="text"
            id="delete_size_input"
            class="form-control"
            placeholder="Type the size name here"
            required
          />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            class="btn btn-danger"
            id="deleteConfirmBtn"
            disabled
          >
            Confirm
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Edit Modal
    const editButtons = document.querySelectorAll(".editBtn");
    const editForm = document.getElementById("editSizeForm");
    const editLabel = document.getElementById("edit_size_label");

    editButtons.forEach((btn) => {
      btn.addEventListener("click", function () {
        const id = this.dataset.id;
        const label = this.dataset.label;
        editLabel.value = label;
        editForm.action = "/editsize/" + id;
      });
    });

    // Delete Modal
    const deleteButtons = document.querySelectorAll(".deleteBtn");
    const deleteForm = document.getElementById("deleteSizeForm");
    const deleteUnitName = document.getElementById("delete_size_name");
    const deleteInput = document.getElementById("delete_size_input");
    const deleteConfirmBtn = document.getElementById("deleteConfirmBtn");

    deleteButtons.forEach((btn) => {
      btn.addEventListener("click", function () {
        const id = this.dataset.id;
        const label = this.dataset.label;

        deleteUnitName.textContent = label;
        deleteInput.value = "";
        deleteConfirmBtn.disabled = true;
        deleteForm.action = "/deletesize/" + id;

        deleteInput.addEventListener("input", function () {
          deleteConfirmBtn.disabled = deleteInput.value.trim() !== label;
        });
      });
    });
  });
</script>

