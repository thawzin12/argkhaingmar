<%- include('datahead.ejs') %>

<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Supplier Management</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">Suppliers</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 offset-md-4"><%- include('msg.ejs') %></div>
    </div>
    <div class="row">
      <!-- Create Form -->
      <div class="col-md-5">
        <div class="card card-primary shadow-lg">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-plus"></i> Add Supplier</h3>
          </div>
          <form action="/createsupplier" method="post">
            <div class="card-body">
              <div class="form-group">
                <label>Supplier Name</label>
                <input
                  type="text"
                  name="name"
                  class="form-control <%= errors?.name ? 'is-invalid' : '' %>"
                  placeholder="Enter supplier name"
                  value="<%= formData?.name || '' %>"
                />
                <% if (errors?.name) { %>
                <div class="invalid-feedback"><%= errors.name %></div>
                <% } %>
              </div>

              <div class="form-group">
                <label>Phone</label>
                <input
                  type="text"
                  name="phone"
                  class="form-control <%= errors?.phone ? 'is-invalid' : '' %>"
                  placeholder="Enter phone number"
                  value="<%= formData.phone || '' %>"
                />
                <% if (errors?.phone) { %>
                <div class="invalid-feedback"><%= errors.phone %></div>
                <% } %>
              </div>

              <div class="form-group">
                <label>Address</label>
                <textarea
                  name="address"
                  class="form-control <%= errors?.address ? 'is-invalid' : '' %>"
                  rows="3"
                >
<%= formData?.address || '' %></textarea
                >
                <% if (errors?.address) { %>
                <div class="invalid-feedback"><%= errors.address %></div>
                <% } %>
              </div>
            </div>
            <div class="card-footer text-right">
              <button type="submit" class="btn button-29 text-white">
                <i class="fas fa-save"></i> Submit
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Supplier List -->
      <div class="col-md-7">
        <div class="card shadow-lg">
          <div class="card-header bg-success text-white">
            <h3 class="card-title">
              <i class="fas fa-list"></i> All Suppliers
            </h3>
          </div>
          <div class="card-body p-0">
            <table class="table table-bordered table-hover table-striped mb-0">
              <thead class="thead-dark">
                <tr>
                  <th style="width: 5%">#</th>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Address</th>
                  <th style="width: 30%">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (suppliers && suppliers.length > 0) { %> <%
                suppliers.forEach((s, idx) => { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= s.name %></td>
                  <td><%= s.phone %></td>
                  <td><%= s.address %></td>
                  <td>
                    <!-- Edit -->
                    <button
                      type="button"
                      class="btn btn-sm btn-warning editBtn"
                      data-toggle="modal"
                      data-target="#editSupplierModal"
                      data-id="<%= s.supplier_id %>"
                      data-name="<%= s.name %>"
                      data-phone="<%= s.phone %>"
                      data-address="<%= s.address %>"
                    >
                      <i class="fa fa-edit"></i> Edit
                    </button>

                    <!-- Delete -->
                    <button
                      type="button"
                      class="btn btn-sm btn-danger deleteBtn"
                      data-toggle="modal"
                      data-target="#deleteSupplierModal"
                      data-id="<%= s.supplier_id %>"
                      data-name="<%= s.name %>"
                    >
                      <i class="fa fa-trash"></i> Delete
                    </button>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">
                    No suppliers found
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Edit Modal -->
<div class="modal fade" id="editSupplierModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <form id="editSupplierForm" method="post">
      <div class="modal-content">
        <div class="modal-header bg-warning">
          <h5 class="modal-title">Edit Supplier</h5>
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Supplier Name</label>
            <input
              type="text"
              name="name"
              id="edit_name"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label>Phone</label>
            <input
              type="text"
              name="phone"
              id="edit_phone"
              class="form-control"
              required
            />
          </div>
          <div class="form-group">
            <label>Address</label>
            <textarea
              name="address"
              id="edit_address"
              class="form-control"
              rows="3"
              required
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Delete Confirm Modal -->
<div class="modal fade" id="deleteSupplierModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <form id="deleteSupplierForm" method="post">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">Delete Supplier</h5>
          <button type="button" class="close text-white" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>
            To confirm deletion, type the supplier name:
            <strong id="delete_name_label"></strong>
          </p>
          <input
            type="text"
            id="delete_input"
            class="form-control"
            placeholder="Enter supplier name here"
            required
          />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            class="btn btn-danger"
            id="deleteConfirmBtn"
            disabled
          >
            Confirm Delete
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Edit
    document.querySelectorAll(".editBtn").forEach((btn) => {
      btn.addEventListener("click", function () {
        const { id, name, phone, address } = this.dataset;
        document.getElementById("edit_name").value = name;
        document.getElementById("edit_phone").value = phone;
        document.getElementById("edit_address").value = address;
        document.getElementById("editSupplierForm").action =
          "/editsupplier/" + id;
      });
    });

    // Delete
    const deleteInput = document.getElementById("delete_input");
    const deleteBtn = document.getElementById("deleteConfirmBtn");
    document.querySelectorAll(".deleteBtn").forEach((btn) => {
      btn.addEventListener("click", function () {
        const { id, name } = this.dataset;
        document.getElementById("delete_name_label").textContent = name;
        document.getElementById("deleteSupplierForm").action =
          "/deletesupplier/" + id;
        deleteInput.value = "";
        deleteBtn.disabled = true;
      });
    });
    deleteInput.addEventListener("input", function () {
      const expected = document
        .getElementById("delete_name_label")
        .textContent.trim();
      deleteBtn.disabled = deleteInput.value.trim() !== expected;
    });
  });
</script>

